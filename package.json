{
  "name": "kaarplus",
  "version": "1.0.0",
  "private": true,
  "description": "Premium car sales marketplace for the Estonian market",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "DISABLE_RATE_LIMIT=true playwright test",
    "test:e2e:ui": "DISABLE_RATE_LIMIT=true playwright test --ui",
    "db:generate": "npm run generate --workspace=packages/database",
    "db:migrate": "npm run migrate:dev --workspace=packages/database",
    "db:studio": "npm run studio --workspace=packages/database",
    "db:seed": "npm run seed --workspace=packages/database",
    "db:reset": "npm run migrate:reset --workspace=packages/database",
    "prepare": "if [ -z \"$CI\" ]; then husky; fi",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "husky": "^9.0.11",
    "jsdom": "^28.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  }
}